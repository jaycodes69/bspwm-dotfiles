[global]
    # Positioning & appearance
    follow = mouse
    monitor = 0
    width = (300, 300)           # Fixed width 300px
    height = (100, 100)              # Auto height
    origin = top-right
    offset = (10, 30)
    scale = 0
    notification_limit = 10

    # Transparency and border
    transparency = 15
    frame_width = 1
    frame_color = "#44475a"      # Dracula current line color
    separator_height = 1
    separator_color = "#44475a"
    corner_radius = 8
    padding = 10
    horizontal_padding = 15
    text_icon_padding = 8

    # Fonts and markup
    font = Inter 15
    markup = full
    format = "<b><span foreground='#ff79c6'>%s</span></b>\n<span foreground='#f8f8f2'>%b</span>"
    alignment = left
    vertical_alignment = center
    ellipsize = middle

    # Icon settings
    icon_position = left
    min_icon_size = 24
    max_icon_size = 48

    # Behavior
    sticky_history = true
    history_length = 20
    stack_duplicates = true
    hide_duplicate_count = false
    show_age_threshold = 60
    show_indicators = yes

    # Scripts and commands
    browser = firefox -new-tab
    dmenu = rofi -dmenu -p dunst:
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false
    force_xwayland = false

    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#282a36"
    foreground = "#6272a4"       # Dracula comment color
    timeout = 5

[urgency_normal]
    background = "#282a36"
    foreground = "#bd93f9"       # Dracula purple
    timeout = 8

[urgency_critical]
    background = "#ff5555"
    foreground = "#f8f8f2"
    frame_color = "#ff5555"
    timeout = 0
